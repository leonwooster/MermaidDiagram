<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MermaidDiagramApp.Views.PropertiesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MermaidDiagramApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:MermaidDiagramApp.Models.Canvas"
    xmlns:models="using:MermaidDiagramApp.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Properties" 
                   Style="{ThemeResource TitleTextBlockStyle}" 
                   Margin="0,0,0,12"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="12">
                <!-- No Selection Message -->
                <TextBlock Text="No element selected"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Visibility="{x:Bind ViewModel.HasSelection, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                <!-- Node Properties -->
                <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsNodeSelected, Mode=OneWay}">
                    <TextBlock Text="Node Properties" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    
                    <TextBox Header="ID" 
                             Text="{x:Bind ViewModel.SelectedNode.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="True"/>
                    
                    <TextBox Header="Text" 
                             Text="{x:Bind ViewModel.SelectedNode.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <ComboBox Header="Shape" 
                              ItemsSource="{x:Bind models:FlowchartNode.GetShapeNames()}"
                              SelectedItem="{x:Bind ViewModel.SelectedNode.Shape, Mode=TwoWay, Converter={StaticResource EnumToStringConverter}}"
                              HorizontalAlignment="Stretch"/>
                    
                    <TextBlock Text="Position" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <NumberBox Grid.Column="0" 
                                   Header="X" 
                                   Value="{x:Bind ViewModel.SelectedNode.PositionX, Mode=TwoWay}"
                                   SpinButtonPlacementMode="Compact"/>
                        <NumberBox Grid.Column="1" 
                                   Header="Y" 
                                   Value="{x:Bind ViewModel.SelectedNode.PositionY, Mode=TwoWay}"
                                   SpinButtonPlacementMode="Compact"/>
                    </Grid>
                    
                    <TextBlock Text="Size" FontWeight="SemiBold" Margin="0,8,0,0"/>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <NumberBox Grid.Column="0" 
                                   Header="Width" 
                                   Value="{x:Bind ViewModel.SelectedNode.SizeWidth, Mode=TwoWay}"
                                   Minimum="40"
                                   SpinButtonPlacementMode="Compact"/>
                        <NumberBox Grid.Column="1" 
                                   Header="Height" 
                                   Value="{x:Bind ViewModel.SelectedNode.SizeHeight, Mode=TwoWay}"
                                   Minimum="30"
                                   SpinButtonPlacementMode="Compact"/>
                    </Grid>
                </StackPanel>

                <!-- Connector Properties -->
                <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsConnectorSelected, Mode=OneWay}">
                    <TextBlock Text="Connector Properties" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    
                    <TextBox Header="ID" 
                             Text="{x:Bind ViewModel.SelectedConnector.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="True"/>
                    
                    <TextBox Header="Label" 
                             Text="{x:Bind ViewModel.SelectedConnector.Label, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <TextBox Header="Start Node" 
                             Text="{x:Bind ViewModel.SelectedConnector.StartNodeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <TextBox Header="End Node" 
                             Text="{x:Bind ViewModel.SelectedConnector.EndNodeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
