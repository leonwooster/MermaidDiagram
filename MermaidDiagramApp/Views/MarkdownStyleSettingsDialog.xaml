<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MermaidDiagramApp.Views.MarkdownStyleSettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Markdown Style Settings"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="SaveButton_Click"
    CloseButtonClick="CancelButton_Click">

    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="600">
        <StackPanel Spacing="16" Padding="4">
            
            <!-- Font Settings Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Font Settings" 
                          FontWeight="SemiBold" 
                          FontSize="16"/>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Font Size (px)"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Slider x:Name="FontSizeSlider"
                               Minimum="10"
                               Maximum="32"
                               Value="16"
                               StepFrequency="1"
                               TickFrequency="2"
                               TickPlacement="BottomRight"
                               ValueChanged="FontSizeSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" 
                                  Text="{x:Bind FontSizeSlider.Value, Mode=OneWay}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"
                                  MinWidth="30"/>
                    </Grid>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Font Family"/>
                    <ComboBox x:Name="FontFamilyComboBox"
                             HorizontalAlignment="Stretch"
                             SelectedIndex="0">
                        <ComboBoxItem Content="System Default (-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif)"/>
                        <ComboBoxItem Content="Segoe UI"/>
                        <ComboBoxItem Content="Arial"/>
                        <ComboBoxItem Content="Georgia"/>
                        <ComboBoxItem Content="Times New Roman"/>
                        <ComboBoxItem Content="Verdana"/>
                        <ComboBoxItem Content="Calibri"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Line Height"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Slider x:Name="LineHeightSlider"
                               Minimum="1.0"
                               Maximum="3.0"
                               Value="1.6"
                               StepFrequency="0.1"
                               TickFrequency="0.2"
                               TickPlacement="BottomRight"
                               ValueChanged="LineHeightSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" 
                                  Text="{x:Bind LineHeightSlider.Value, Mode=OneWay}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"
                                  MinWidth="30"/>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Layout Settings Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Layout Settings" 
                          FontWeight="SemiBold" 
                          FontSize="16"/>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Maximum Content Width (px, 0 = no limit)"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Slider x:Name="MaxWidthSlider"
                               Minimum="0"
                               Maximum="2000"
                               Value="900"
                               StepFrequency="50"
                               TickFrequency="200"
                               TickPlacement="BottomRight"
                               ValueChanged="MaxWidthSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" 
                                  Text="{x:Bind MaxWidthSlider.Value, Mode=OneWay}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"
                                  MinWidth="50"/>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Code Block Settings Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Code Block Settings" 
                          FontWeight="SemiBold" 
                          FontSize="16"/>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Code Font Size (px)"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Slider x:Name="CodeFontSizeSlider"
                               Minimum="8"
                               Maximum="24"
                               Value="14"
                               StepFrequency="1"
                               TickFrequency="2"
                               TickPlacement="BottomRight"
                               ValueChanged="CodeFontSizeSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" 
                                  Text="{x:Bind CodeFontSizeSlider.Value, Mode=OneWay}"
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"
                                  MinWidth="30"/>
                    </Grid>
                </StackPanel>

                <StackPanel Spacing="4">
                    <TextBlock Text="Code Font Family"/>
                    <ComboBox x:Name="CodeFontFamilyComboBox"
                             HorizontalAlignment="Stretch"
                             SelectedIndex="0">
                        <ComboBoxItem Content="Consolas, Monaco, Courier New, monospace"/>
                        <ComboBoxItem Content="Consolas"/>
                        <ComboBoxItem Content="Monaco"/>
                        <ComboBoxItem Content="Courier New"/>
                        <ComboBoxItem Content="Fira Code"/>
                        <ComboBoxItem Content="Source Code Pro"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- Reset Button -->
            <Button x:Name="ResetButton"
                   Content="Reset to Defaults"
                   HorizontalAlignment="Left"
                   Click="ResetButton_Click"/>

            <!-- Preview Section -->
            <StackPanel Spacing="8">
                <TextBlock Text="Preview" 
                          FontWeight="SemiBold" 
                          FontSize="16"/>
                <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="12"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel Spacing="8">
                        <TextBlock x:Name="PreviewText"
                                  Text="This is a preview of your Markdown text. The quick brown fox jumps over the lazy dog."
                                  TextWrapping="Wrap"/>
                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                               Padding="8"
                               CornerRadius="4">
                            <TextBlock x:Name="PreviewCode"
                                      Text="const example = 'code block';"
                                      FontFamily="Consolas"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
