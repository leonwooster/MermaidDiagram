<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MermaidDiagramApp.SyntaxIssuesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MermaidDiagramApp"
    xmlns:models="using:MermaidDiagramApp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Check &amp; Fix Mermaid Syntax"
    PrimaryButtonText="Apply Fixes"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    MinWidth="800"
    MinHeight="600">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Summary Header -->
        <Grid Grid.Row="0" Padding="0,0,0,12" ColumnDefinitions="*,Auto">
            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="Detected Syntax Issues" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock x:Name="SummaryText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Select All" Click="SelectAll_Click"/>
                <Button Content="Deselect All" Click="DeselectAll_Click"/>
            </StackPanel>
        </Grid>

        <!-- Issues List and Preview -->
        <Grid Grid.Row="1" ColumnDefinitions="*,2*">
            <!-- Issues List -->
            <Border Grid.Column="0" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Margin="0,0,8,0">
                <Grid RowDefinitions="Auto,*">
                    <Border Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                        <TextBlock Text="Issues" 
                                   Padding="12,8"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </Border>
                    
                    <ListView Grid.Row="1"
                              x:Name="IssuesListView"
                              SelectionMode="Single"
                              SelectionChanged="IssuesListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto,*" Padding="8,4">
                                    <CheckBox Grid.Column="0" 
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Margin="0,0,8,0"/>
                                    
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="{Binding Description}" 
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Style="{StaticResource CaptionTextBlockStyle}">
                                            <Run Text="Line "/>
                                            <Run Text="{Binding LineNumber}"/>
                                            <Run Text=", Column "/>
                                            <Run Text="{Binding Column}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Preview Panel -->
            <Border Grid.Column="1" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <Grid RowDefinitions="Auto,*">
                    <Border Grid.Row="0" 
                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                        <TextBlock Text="Preview" 
                                   Padding="12,8"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" Padding="12">
                        <StackPanel x:Name="PreviewPanel" Spacing="16">
                            <TextBlock Text="Select an issue to preview the fix" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Issue Type Summary -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <StackPanel x:Name="IssueTypeSummary" Orientation="Horizontal" Spacing="16">
                <!-- Populated dynamically -->
            </StackPanel>
        </Grid>
    </Grid>
</ContentDialog>
